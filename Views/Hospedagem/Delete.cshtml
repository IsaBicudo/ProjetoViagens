@model ProjetoBancoDados.Models.Hospedagem

@{
    ViewData["Title"] = "Deletar";
}

<h1>Deletar</h1>

<h3>Você tem certeza que deseja deletar isso?</h3>
<div>
    <h4>Hospedagem</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.HospedagemNome)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.HospedagemNome)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.TipoHospedagem)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.TipoHospedagem.TipoHospedagemNome)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Destino)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Destino.DestinoNome)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.HospedagemLocal)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.HospedagemLocal)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="HospedagemId" />
        <input type="submit" value="Deletar" class="btn-danger" />
        <a asp-action="Index" class="btn-primary">Voltar à Lista</a>
    </form>
</div>
