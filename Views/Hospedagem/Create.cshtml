@model ProjetoBancoDados.Models.Hospedagem

@{
    ViewData["Title"] = "Cadastro";
}

<h1>Cadastro</h1>

<h4>Hospedagem</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="HospedagemNome" class="control-label"></label>
                <input asp-for="HospedagemNome" class="form-control" />
                <span asp-validation-for="HospedagemNome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TipoHospedagem" class="control-label"></label>
                <select asp-for="TipoHospedagemId" class ="form-control" asp-items="ViewBag.TipoHospedagemId"></select>
            </div>
            <div class="form-group">
                <label asp-for="Destino" class="control-label"></label>
                <select asp-for="DestinoId" class ="form-control" asp-items="ViewBag.DestinoId"></select>
            </div>
            <div class="form-group">
                <label asp-for="HospedagemLocal" class="control-label"></label>
                <input asp-for="HospedagemLocal" class="form-control" />
                <span asp-validation-for="HospedagemLocal" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Cadastrar" class="btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" class="btn-primary">Voltar à Lista</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
