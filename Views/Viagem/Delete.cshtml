        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Cliente.ClienteNome)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Pacotes)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Pacotes.PacotesNome)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Hospedagem)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Hospedagem.HospedagemNome)
