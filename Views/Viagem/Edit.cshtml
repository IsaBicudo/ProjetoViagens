@model ProjetoBancoDados.Models.Viagem

@{
    ViewData["Title"] = "Editar";
}

<h1>Editar</h1>

<h4>Viagem</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ViagemId" />
            <div class="form-group">
                <label asp-for="Cliente" class="control-label"></label>
                <select asp-for="ClienteId" class="form-control" asp-items="ViewBag.ClienteId"></select>
                <span asp-validation-for="ClienteId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Pacotes" class="control-label"></label>
                <select asp-for="PacotesId" class="form-control" asp-items="ViewBag.PacotesId"></select>
                <span asp-validation-for="PacotesId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Hospedagem" class="control-label"></label>
                <select asp-for="HospedagemId" class="form-control" asp-items="ViewBag.HospedagemId"></select>
                <span asp-validation-for="HospedagemId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Transporte" class="control-label"></label>
                <select asp-for="TransporteId" class="form-control" asp-items="ViewBag.TransporteId"></select>
                <span asp-validation-for="TransporteId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ViagemData" class="control-label"></label>
                <input asp-for="ViagemData" class="form-control" />
                <span asp-validation-for="ViagemData" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ViagemValor" class="control-label"></label>
                <input asp-for="ViagemValor" class="form-control" type="number"/>
                <span asp-validation-for="ViagemValor" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Pagamento" class="control-label"></label>
                <select asp-for="PagamentoId" class="form-control" asp-items="ViewBag.PagamentoId"></select>
                <span asp-validation-for="PagamentoId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Salvar" class="btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" class="btn-primary">Voltar à Lista</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
