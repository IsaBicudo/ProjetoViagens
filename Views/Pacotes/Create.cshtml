@model ProjetoBancoDados.Models.Pacotes

@{
    ViewData["Title"] = "Cadastro";
}

<h1>Cadastro</h1>

<h4>Pacotes</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="PacotesNome" class="control-label"></label>
                <input asp-for="PacotesNome" class="form-control" />
                <span asp-validation-for="PacotesNome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Cadastrar" class="btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" class="btn-primary">Voltar à Lista</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
