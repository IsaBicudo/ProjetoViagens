@model ProjetoBancoDados.Models.Transporte

@{
    ViewData["Title"] = "Editar";
}

<h1>Editar</h1>

<h4>Transporte</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="TransporteId" />
            <div class="form-group">
                <label asp-for="TransporteNome" class="control-label"></label>
                <input asp-for="TransporteNome" class="form-control" />
                <span asp-validation-for="TransporteNome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TransporteAno" class="control-label"></label>
                <input asp-for="TransporteAno" class="form-control" />
                <span asp-validation-for="TransporteAno" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TransportePlaca" class="control-label"></label>
                <input asp-for="TransportePlaca" class="form-control" />
                <span asp-validation-for="TransportePlaca" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Salvar" class="btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" class="btn-primary">Voltar à Lista</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
